allow fapolicyd_t user_home_t:dir { watch_mount watch_with_perm };

#### Allow to access: /dev/dma_heap
require {
	type init_t;
	type dma_device_t;
	type journalctl_t;
	type udev_t;
}
allow init_t dma_device_t:dir list_dir_perms;
allow udev_t dma_device_t:dir list_dir_perms;
